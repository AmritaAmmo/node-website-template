#!/bin/bash
set -ue

# script for restarting the server. usualy after deploy

shared=/home/oren/projects/shared
app=/home/oren/projects/node-website-template

test -d "$shared" || mkdir -p $shared

forever stop server.js
rm -r $shared/forever.log || true

cd $app
forever start --pidFile $shared/server.pid -l $shared/forever.log -o $shared/server.log -e $shared/server.log server.js

